doctype html 
html
    head
        title Vista de productos.
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css", integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l", crossorigin="anonymous")
    body.container.mt-3 
        .table-responsive 
            table.table.table-dark
                tr 
                    th Nombre
                    th Precio
                    th Foto
                for product in products
                    tr 
                        td #{product.title} 
                        td #{product.price}
                        td 
                            img(src=product.thumbnail, alt="Not found." width="50")
                else 
                    h3 No se encontraron productos.
        form(action="/api/productos/guardar", method="post") 
            .form-group 
                label(for="formGroupInput") Nombre.
                input(type="text", name='title', id='formGroupInput', placeholder="Computadora", required).form-control
            .form-group 
                label(for="formGroupInput2") Precio.
                input(type="text", name='price', id='formGroupInput2', placeholder="150000", required).form-control
            .form-group 
                label(for="formGroupInput3") Foto URL.
                input(type="text", name='thumbnail', id='formGroupInput3', placeholder="https://cdn3.iconfinder.com/data/icons/pc", required).form-control
            button.btn.btn-dark Enviar.