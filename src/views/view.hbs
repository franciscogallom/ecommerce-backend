<style>
  .table td, .table th { vertical-align: middle; } .font {font-family:
  'Poppins', sans-serif;}
</style>

<div class="jumbotron font">
  <h1>Lista de productos.</h1>
  <br />

  {{#if products.length}}
    <div class="table-responsive">
      <table class="table table-dark">
        <tr> <th>Nombre</th> <th>Precio</th> <th>Foto</th></tr>
        {{#each products}}
          <tr>
            <td>{{this.title}}</td>
            <td>${{this.price}}</td>
            <td><img width="50" src={{this.thumbnail}} alt="not found" /></td>
          </tr>
        {{/each}}
      </table>
    </div>
  {{else}}
    <h3 class="alert alert-warning">No se encontraron productos</h3>
  {{/if}}

  <h3>Agregar productos.</h3>

  <form action="/api/productos/guardar" method="POST">
    <div class="form-group">
      <label for="formGroupExampleInput">Nombre.</label>
      <input
        type="text"
        name="title"
        class="form-control"
        id="formGroupExampleInput"
        placeholder="Computadora"
        required
      />
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Precio</label>
      <input
        type="text"
        name="price"
        class="form-control"
        id="formGroupExampleInput2"
        placeholder="150000"
        required
      />
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput3">Foto URL</label>
      <input
        type="text"
        name="thumbnail"
        class="form-control"
        id="formGroupExampleInput3"
        placeholder="https://cdn3.iconfinder.com/data/icons/pc"
        required
      />
    </div>
    <button class="btn btn-dark">Enviar</button>
  </form>

</div>